{% extends 'base.html.twig' %}
{% block title %}Hello ContactController!{% endblock %}
{% block head %}
    {{ parent() }}
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "DeltaBois",
      "image": "{{ asset('assets/images/logo.png') }}",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "4 Rue d’Aquitaine ZA de Cramat",
        "addressLocality": "Soustons",
        "postalCode": "40140",
        "addressCountry": "FR"
      },
      "telephone": "{{ coord.telephone }}",
      "email": "{{ coord.mail }}",
      "url": "{{ path('contact') }}"
    }
    </script>
{% endblock %}
{% block body %}
            
            
    <!-- N A V B A R -->
    {% include('_partials/navbar.html.twig') %} 
    <!-- N A V B A R -->


    <!-- P U B -->
    {% include('_partials/pub.html.twig') %} 
    <!-- P U B -->


    <!-- P I C T U R E - H E A D E R -->
    <section id="picture-header" class="section-hidden">
        <div class="header-container mt-md-5 mt-0">
            <picture>
                <source media="(min-width: 768px)" srcset="{{ asset('assets/images/img-header-contact.jpg') }}">
                <img class="header-image" src="{{ asset('assets/images/img-header-contact-phone.jpg') }}" alt="Photo d'une plage de la région.">
            </picture>
        </div>
    </section>
    <!-- P I C T U R E - H E A D E R -->


    <!-- A L E R T E -->
    {% include('_partials/alerte.html.twig') %}
    <!-- A L E R T E -->


    <!-- C O M M E N T - H E A D E R -->
    {% include('_partials/comment.html.twig') %}  
    <!-- C O M M E N T - H E A D E R -->


    <!-- P I C T U R E - R U L E -->
    <section id="picture-rule" class="section-hidden">
        <div class="header-container mt-md-4">
            <picture>
                <source media="(min-width: 768px)" srcset="{{ asset('assets/images/wood-1.jpg') }}">
                <img class="header-image" src="{{ asset('assets/images/wood-1-phone.jpg') }}" alt="Header Image">
            </picture>
        </div>
    </section>
    <!-- P I C T U R E - R U L E -->


    <!-- P I C T U R E - L E F T -->
    <section id="section-left" class="section-hidden">
        <div class="container-fluid row col-md-10 mx-auto mt-5 mt-md-5">
            <img src="{{ asset('assets/images/' ~ (Article2.picture|default('article-2.jpg'))) }}" alt="Photo de la carte de visite de DeltaBois." class="picture-left img-fluid col-md-6 order-md-1 order-1">
            <div class="containt-text col-md-6 order-md-2 order-2">
                <div class="containt-title">
                    <div class="icon-bg">
                        <i class="fa-solid fa-location-dot"></i>
                    </div>
                    <h1 class="title-text">{{ Article2.title }}</h1>
                </div>
                <p class="p-text col-md-10 mx-auto">{{ Article2.text }}</p>
                <ul class="list-elements col-12">
                    {% for coord in coordonnees %}
                        <li class="p-liste">
                            <a href="https://www.google.fr/maps/place/SARL+DELTABOIS/@43.746488,-1.3350736,15.75z/data=!4m6!3m5!1s0xd5157aa489d4281:0x7c30fbf3d705fdf0!8m2!3d43.7465443!4d-1.3314309!16s%2Fg%2F1tczlt31?entry=ttu&g_ep=EgoyMDI0MTAxNC4wIKXMDSoASAFQAw%3D%3D" target="_blank" rel="noopener noreferrer" class="liste">
                                {{ coord.adresse }}
                            </a>
                        </li>
                        <li class="p-liste">
                            <a href="https://www.google.fr/maps/place/40140+Soustons/@43.7540142,-1.3716529,13z/data=!3m1!4b1!4m6!3m5!1s0xd5157adf33439bb:0x406651748162c50!8m2!3d43.75562!4d-1.326638!16s%2Fm%2F03m4m52?entry=ttu&g_ep=EgoyMDI0MTIwNC4wIKXMDSoASAFQAw%3D%3D" target="_blank" rel="noopener noreferrer" class="liste">
                                {{ coord.ville }}
                            </a>
                        </li>
                        <li class="p-liste">
                            <a href="tel:{{ coord.telephone }}" class="liste">{{ coord.telephone }}</a>
                        </li>
                        <li class="p-liste">
                            <a href="mailto:{{ coord.mail }}" class="liste">{{ coord.mail }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </section>
    <!-- P I C T U R E - L E F T -->
     

    <!-- P I C T U R E - R U L E -->
<section id="localisation" class="section-hidden">
    <div class="col-10 mx-auto mt-3 mt-md-5 my-md-0 my-3">
        <a href="https://www.google.fr/maps/place/SARL+DELTABOIS/@43.746488,-1.3350736,15.75z/data=!4m6!3m5!1s0xd5157aa489d4281:0x7c30fbf3d705fdf0!8m2!3d43.7465443!4d-1.3314309!16s%2Fg%2F1tczlt31?entry=ttu&g_ep=EgoyMDI0MTAxNC4wIKXMDSoASAFQAw%3D%3D" target="_blank">
            <picture>
                <source srcset="{{ asset('assets/images/localisation-phone.png') }}" media="(max-width: 768px)">
                <img class="img-fluid" src="{{ asset('assets/images/localisation.png') }}" alt="Localisation Image">
            </picture>
        </a>
    </div>
</section>

    <!-- P I C T U R E - R U L E -->





    <!-- F O R M - M A I L -->
    {% include('_partials/mail.html.twig') %}  
    <!-- F O R M - M A I L -->


    <!-- P I C T U R E - R U L E -->
    <section id="picture-rule" class="section-hidden">
        <div class="header-container mt-3 mt-md-5">
            <picture>
                <source media="(min-width: 768px)" srcset="{{ asset('assets/images/wood-1.jpg') }}">
                <img class="header-image" src="{{ asset('assets/images/wood-1-phone.jpg') }}" alt="Bandeau texturé bois foncé.">
            </picture>
        </div>
    </section>
    <!-- P I C T U R E - R U L E -->


    <!-- C O M M E N T - H E A D E R -->
    {% include('_partials/comment.html.twig') %}  
    <!-- C O M M E N T - H E A D E R -->
    
    
    <!-- P I C T U R E - F O O T E R -->
    <section id="picture-footer" class="section-hidden">
        <div class="header-container mt-md-5 mt-0">
            <picture>
                <source media="(min-width: 768px)" srcset="{{ asset('assets/images/img-header-contact.jpg') }}">
                <img class="header-image" src="{{ asset('assets/images/img-header-contact-phone.jpg') }}" alt="Photo d'une plage de la région.">
            </picture>
        </div>
    </section>
    <!-- P I C T U R E - F O O T E R -->


    <!-- F O O T E R -->
    <section id="footer" class="section-hidden">
        <div class="container-fluid d-flex row justify-content-center align-items-center mx-auto col-12">
            <a href="{{ path('app_legal') }}" class="footer-text col-12">MENTIONS LÉGALES & CONFIDENTIALITÉ</a>
        </div>
    </section>
    <!-- F O O T E R -->


{% endblock %}
