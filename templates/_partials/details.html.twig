{% extends 'base.html.twig' %}
{% block title %}Hello ProduitsController!{% endblock %}
{% block body %}


    <!-- N A V B A R -->
    {% include('_partials/navbar.html.twig') %} 
    <!-- N A V B A R -->


    <!-- P U B -->
    {% include('_partials/pub.html.twig') %} 
    <!-- P U B -->


    <!-- D E T A I L S -->
    <section id="details">
        <div class="details d-flex justify-content-center align-items-center mt-md-5 mx-auto col-md-12">
            <img src="{{ asset('assets/images/' ~ (card.details|default('default-details.jpg'))) }}" alt="" class="img-fluid">
        </div>
    </section>
    <!-- D E T A I L S -->


    <!-- C A R D S - P R O D U I T S -->
    {% include('_partials/cards.html.twig') %} 
    <!-- C A R D S - P R O D U I T S -->

    <!-- P I C T U R E - R U L E -->
    <section id="picture-rule">
        <div class="header-container mt-md-4">
            <picture>
                <source media="(min-width: 768px)" srcset="{{ asset('assets/images/wood-1.jpg') }}">
                <img class="header-image" src="{{ asset('assets/images/wood-1-phone.jpg') }}" alt="Header Image">
            </picture>
        </div>
    </section>
    <!-- P I C T U R E - R U L E -->


    <!-- P I C T U R E - R I G H T -->
    <section id="section-right">
        <div class="container-fluid row col-md-10 mx-auto mt-5 mt-md-5">
            <img src="{{ asset('assets/images/' ~ (Article5.picture|default('article-5.jpg'))) }}" alt="{{ Article5.title }}" class="picture-right img-fluid col-md-6 order-md-2 order-1">
            <div class="containt-text col-md-6 order-md-1 order-2">
                <div class="containt-title">
                    <div class="icon-bg">
                        <i class="fa-solid fa-people-group"></i>
                    </div>
                    <h1 class="title-text">{{ Article5.title }}</h1>
                </div>
                <p class="p-text col-md-10">{{ Article5.text }}</p>
            </div>
        </div>
    </section>
    <!-- P I C T U R E - R I G H T -->


    <!-- A V A N T - A P R E S -->
    <section id="avant-apres">
        <div class="container-fluid row col-md-10 mx-auto mt-md-5 mt-1">
            <div class="col-md-6 text-center">
                <img src="{{ asset('assets/images/picture-avant.jpg') }}" alt="Avant" class="img-fluid">
                <div class="containt-title mt-md-2 mt-3">
                    <div class="icon-bg">
                        <i class="fa-solid fa-star"></i>
                    </div>
                    <h1 class="title-text">AVANT</h1>
                </div>
            </div>
            <div class="col-md-6 text-center mt-3 mt-md-0">
                <img src="{{ asset('assets/images/picture-apres.jpg') }}" alt="Après" class="img-fluid">
                <div class="containt-title mt-md-2 mt-3">
                    <div class="icon-bg">
                        <i class="fa-solid fa-star"></i>
                    </div>
                    <h1 class="title-text">APRÉS</h1>
                </div>
            </div>
        </div>
    </section>
    <!-- A V A N T - A P R E S -->
    

    <!-- P I C T U R E - R U L E -->
    <section id="picture-rule">
        <div class="header-container mt-md-4">
            <picture>
                <source media="(min-width: 768px)" srcset="{{ asset('assets/images/wood-1.jpg') }}">
                <img class="header-image" src="{{ asset('assets/images/wood-1-phone.jpg') }}" alt="Header Image">
            </picture>
        </div>
    </section>
    <!-- P I C T U R E - R U L E -->


    <!-- C O M M E N T - H E A D E R -->
    {% include('_partials/comment.html.twig') %} 
    <!-- C O M M E N T - H E A D E R -->
    
    
    <!-- P I C T U R E - H E A D E R -->
    <section id="picture-header">
        <div class="header-container">
            <picture>
                <source media="(min-width: 768px)" srcset="{{ asset('assets/images/img-header-inde.jpg') }}">
                <img class="header-image" src="{{ asset('assets/images/img-header-index-phone.jpg') }}" alt="Photo aérienne de l'entrepôt.">
            </picture>
        </div>
    </section>
    <!-- P I C T U R E - H E A D E R -->
    

    <!-- F O O T E R -->
    <section id="footer">
        <div class="container-fluid d-flex row justify-content-center align-items-center mx-auto col-12">
            <a href="{{ path('app_legal') }}" class="footer-text col-12">MENTIONS LÉGALES & CONFIDENTIALITÉ</a>
        </div>
    </section>
    <!-- F O O T E R -->


{% endblock %}
